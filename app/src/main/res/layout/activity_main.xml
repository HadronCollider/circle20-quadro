<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#4390A7"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/user_login"
        android:layout_width="286dp"
        android:layout_height="46dp"
        android:layout_marginTop="308dp"
        android:backgroundTint="#4390A7"
        android:text="@string/user_login"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/op_login"
        android:layout_width="286dp"
        android:layout_height="46dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="306dp"
        android:backgroundTint="#0098DE"
        android:text="@string/op_login"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_login" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="232dp"
        android:layout_height="44.72dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="179dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="83dp"
        android:contentDescription="@string/img_discr"
        app:layout_constraintBottom_toTopOf="@+id/user_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/group_126okulus_main" />
</androidx.constraintlayout.widget.ConstraintLayout>